@model IList<AddComposerViewModel>

@{
    ViewBag.Title = "Add";
}

@section scripts
{
    @if (IsDebugBuild)
    {
        <script src="http://cdn.tinymce.com/4/tinymce.js" integrity="sha384-ZLmGcx7NndDoJD1tvNLyxHbAgPmytCoUoJaZE9jgXaHtwusXSYf8STW0nS0404nY" crossorigin="anonymous"></script>
    }
    else
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.3.13/tinymce.min.js" integrity="sha384-UjGxx2YJw/Y9s7bFilng+uZ6gYzCSZqfQGli4HdOmweqmbJBMGuPbkZdkmrzxUk9" crossorigin="anonymous"></script>
    }
    <script>
        $(document).ready(function ()
        {
            tinymce.init({
                selector: 'textarea.tinymce',
                height: 500,
                plugins: [
                  'advlist autolink lists link image charmap print preview anchor',
                  'searchreplace visualblocks code fullscreen',
                  'insertdatetime media table contextmenu paste code'
                ],
                toolbar: 'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
                content_css: [
                  '//fast.fonts.net/cssapi/e6dc9b99-64fe-4292-ad98-6974f93cd2a2.css',
                  '//www.tinymce.com/css/codepen.min.css'
                ],
                automatic_uploads: true
            });
        });
    </script>
}

<h2>Add</h2>

@using (Html.BeginForm())
{
    <div id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
        @for (int i = 0; i < Model.Count; i++)
        {
            @Html.HiddenFor(m => Model[i].Language)
            <div class="panel-heading" role="tab" id="article-heading-@i">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#article-collapse-@i" aria-controls="article-collapse-@i">
                        &gt;
                    </a>
                    @Model[i].Language.DisplayName:
                    @Html.TextBoxFor(m => Model[i].FullName)
                </h4>
            </div>
            <div id="article-collapse-@i" class="panel-collapse collapse" role="tabpanel" aria-labelledby="article-heading-@i">
                @Html.TextAreaFor(m => Model[i].Article, new { @class = "tinymce" })
            </div>
        }
        </div>
    </div>
    <input type="submit" value="@Localize(Global.Submit)" />
}
